mixin parseObject(obj)
	ul
		li.node(data-value=obj.name) #{obj.name}
			- if (obj.nodes.length > 0)
				- each node in obj.nodes
					mixin parseObject(node)

doctype html
html
	head
		script(type='text/javascript', src='jquery-2.1.3.min.js')
		script(type='text/javascript', src='script.js')
		link(rel="stylesheet", href="style.css")
	body
		h3!="Left-mouse click to add new node <br> Middle-mouse click to delete a branch"
		+parseObject(tree)
		input.save(type="button",onclick="post_send()",value="Save")
		div.add_node#add_form
			input(type="text")
			input.ok(type="button", value="Add", onclick="add_node()")
			input.close(type="button", value="Cancel", onclick="close_form()")